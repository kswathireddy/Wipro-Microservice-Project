package com.wipro.swathi.demo.feign;



	import org.springframework.cloud.openfeign.FeignClient;
	import org.springframework.data.domain.Page;
	import org.springframework.web.bind.annotation.*;

import com.wipro.swathi.demo.entity.DestinationResponse;
import com.wipro.swathi.demo.entity.DestinationWrapper;

	




	@FeignClient(name = "DESTINATION-SERVICE", path = "/api/v1/destination")
	public interface Packagefeign {

		 @GetMapping("/{id}")
		    DestinationResponse getById(@PathVariable("id") Long id);

		    @GetMapping("/all")
		    Page<DestinationWrapper> getAllDestinations(@RequestParam int page, @RequestParam int size);
		}

