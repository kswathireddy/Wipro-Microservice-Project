package com.wipro.travelAgency.swathi.demo.aop;

import org.aspectj.lang.JoinPoint;
import org.aspectj.lang.annotation.Aspect;
import org.aspectj.lang.annotation.Before;
import org.springframework.stereotype.Component;

import lombok.extern.slf4j.Slf4j;

@Aspect
@Component
@Slf4j
public class UserLoggingAspect {

    @Before("execution(* com.app.example.controller.UserController.*(..))")
    public void logBeforeUserMethods(JoinPoint joinPoint) {
        log.info("ðŸ“Œ UserService: Method called -> {}", joinPoint.getSignature().getName());
    }
}

