package com.wipro.swathi.demo.service;

import javax.print.attribute.standard.Destination;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.stereotype.Service;

import com.wipro.swathi.demo.dto.DestinationDTO;
import com.wipro.swathi.demo.entity.PackageTour;
import com.wipro.swathi.demo.feign.PackageInterfae;
import com.wipro.swathi.demo.repo.PackageRepository;

@Service
public class PackageServiceImpl implements PackageService{
	@Autowired
	private PackageRepository packageRepository;
	
	@Autowired
	private PackageInterfae packageInterface;

	@Override
	public PackageTour addPackage(PackageTour packages) {
		// TODO Auto-generated method stub
		return packageRepository.save(packages);
	}

	

	@Override
	public Page<PackageTour> getAll(Pageable pageable) {
		// TODO Auto-generated method stub
		return packageRepository.findAll(pageable);
	}



	@Override
	public PackageTour getById(Long id) {
		// TODO Auto-generated method stub
		 PackageTour packageTour = packageRepository.findById(id)
		            .orElseThrow(() -> new RuntimeException("Package not found with id: " + id));
		    
		    // Fetch destination info from Destination-Service using Feign
		    try {
		        Destination destination = packageInterface.getById(packageTour.getDestinationId());
		        packageTour.setDestination(destination); // set destination inside package
		    } catch (Exception e) {
		        System.out.println("Failed to get destination info: " + e.getMessage());
		    }

		    return packageTour;
		return null;
	}

	
}
