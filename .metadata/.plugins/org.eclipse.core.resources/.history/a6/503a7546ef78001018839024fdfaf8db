package com.wipro.swathi.demo.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.domain.Page;
import org.springframework.data.domain.PageRequest;
import org.springframework.data.domain.Pageable;
import org.springframework.stereotype.Service;

import com.wipro.swathi.demo.entity.DestinationWrapper;
import com.wipro.swathi.demo.entity.PackageTour;

import com.wipro.swathi.demo.feign.Packagefeign;
import com.wipro.swathi.demo.repo.PackageRepository;

@Service
public class PackageServiceImpl implements PackageService{
	@Autowired
	private PackageRepository packageRepository;
	
	@Autowired
	private Packagefeign packageFeign;
	@Override
    public PackageTour addPackage(PackageTour travelPackage) {
        return packageRepository.save(travelPackage);
    }

    
    public Page<PackageTour> getAllPackages(int page, int size) {
        return packageRepository.findAll(PageRequest.of(page, size));
    }

    @Override
    public PackageTour getPackageById(Long id) {
        return packageRepository.findById(id).orElseThrow(() -> new RuntimeException("Package not found with ID: " + id));
    }
	
	

	

	
}
