package com.wipro.swathi.demo.feign;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.wipro.swathi.demo.dto.DestinationDTO;
import com.wipro.swathi.demo.dto.DestionationDTO;

@FeignClient(name = "destination-service",path="/api/v1/destination")
public interface DestinationService {

	 @GetMapping("/getById/{id}")
	    DestionationDTO getById(@PathVariable("id") Long id);
}
