package com.wipro.swathi.demo.feign;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.wipro.swathi.demo.entity.PackageWrapper;

@FeignClient(name = "PACKAGE-SERVICE", path = "/api/v1/package")
public interface PackageFeign {

    @GetMapping("/{id}")
    PackageWrapper getPackageById(@PathVariable("id") Long id);
}
