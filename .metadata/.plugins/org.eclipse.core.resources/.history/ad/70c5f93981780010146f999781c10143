package com.wipro.swathi.demo.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.wipro.swathi.demo.CustomException;
import com.wipro.swathi.demo.dto.BookingDTO;
import com.wipro.swathi.demo.dto.PackageDTO;
import com.wipro.swathi.demo.dto.UserDTO;
import com.wipro.swathi.demo.entity.Booking;
import com.wipro.swathi.demo.enums.Status;
import com.wipro.swathi.demo.feign.PackageService;
import com.wipro.swathi.demo.feign.UserService;
import com.wipro.swathi.demo.repo.BookingRepo;

@Service
public class BookingServiceImpl implements BookingService {
	
	@Autowired
	private BookingRepo bookingRepository;
	
	@Autowired
	private PackageService packageService;
	
	@Autowired
	private UserService userService;

	

	@Override
	public BookingDTO getById(Long id) {
	    Booking booking = bookingRepository.findById(id)
	        .orElseThrow(() -> new CustomException("Booking not found: " + id));

	    UserDTO user = userService.getUserById(booking.getUserId());
	    PackageDTO pack = packageService.getPackageById(booking.getPackageId());

	    return new BookingDTO(
	        booking.getId(),
	        booking.getStartDate(),
	        booking.getStatus(),
	        user,
	        pack
	    );
	}

	@Override
	public BookingDTO cancel(Long id) {
	    Booking booking = bookingRepository.findById(id)
	            .orElseThrow(() -> new CustomException("Booking not found: " + id));

	    booking.setStatus(Status.CANCELLED);
	    Booking updatedBooking = bookingRepository.save(booking);

	    // Convert the saved Booking entity to BookingDTO
	    BookingDTO bookingDTO = new BookingDTO();
	    bookingDTO.setId(updatedBooking.getId());
	    
	    bookingDTO.setStartDate(updatedBooking.getStartDate());
	    bookingDTO.setStatus(updatedBooking.getStatus());

	    // Optionally, fetch UserDTO and PackageDTO if you want full details
	    // bookingDTO.setUserDTO(userService.getUserById(updatedBooking.getUserId()));
	    // bookingDTO.setPackageDTO(packageService.getPackageById(updatedBooking.getPackageId()));

	    return bookingDTO;
	}


	@Override
	public BookingDTO addBooking(Booking booking) {
		// TODO Auto-generated method stub
		return null;
	}


	@Override
	public Booking addBooking(BookingDTO booking) {
		// TODO Auto-generated method stub
		return bookingRepository.save(booking);
	}
	}
	
	


